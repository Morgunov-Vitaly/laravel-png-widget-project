{
    "openapi": "3.0.0",
    "info": {
        "title": "Users Widget App API",
        "description": "API docs for user-widget-app project",
        "contact": {
            "name": "Swagger API Team"
        },
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost",
            "description": "API server"
        }
    ],
    "paths": {
        "/api/v1/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Get list of users",
                "operationId": "f957de7d77e7ec9013ca3c8f389f0b70",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/UserResource"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/users/{id}/widget": {
            "get": {
                "tags": [
                    "Widgets"
                ],
                "summary": "Get user's widget",
                "operationId": "c8fc124cb964dc205f9e2344d167a89e",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "User ID",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "width",
                        "in": "query",
                        "description": "Width of the widget",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "maximum": 500,
                            "minimum": 100
                        }
                    },
                    {
                        "name": "height",
                        "in": "query",
                        "description": "Height of the widget",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "maximum": 500,
                            "minimum": 100
                        }
                    },
                    {
                        "name": "color",
                        "in": "query",
                        "description": "Color of the widget in hex format",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "pattern": "^#?([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
                        }
                    },
                    {
                        "name": "bgcolor",
                        "in": "query",
                        "description": "Background color of the widget in hex format",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "pattern": "^#?([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Widget image",
                        "content": {
                            "image/png": {}
                        }
                    },
                    "404": {
                        "description": "User not found or not active"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "UserResource": {
                "title": "User Resource",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "avgRating": {
                        "type": "integer"
                    }
                },
                "type": "object"
            }
        }
    }
}